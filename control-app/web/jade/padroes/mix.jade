mixin icon(icone, titulo)
    i(class="icon-"+icone)
    !=" "+titulo

mixin icon-link(href, icone, titulo)
    a(href=href+".html" class="h-form")
        +icon(icone, titulo)

mixin lis-menu(href, icone, titulo)
    li
        a(href=href+".html")
            +icon(icone, titulo)

