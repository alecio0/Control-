mixin inp-txt(tipo, nome, titulo)
    .input-group
        input(type=tipo, id=nome, name=nome)
        label(for=nome class="label")=titulo

mixin inp-rad(nome, id, valor)
    input(type="radio", name=nome id=id value=valor)
    label(for=id)=valor

